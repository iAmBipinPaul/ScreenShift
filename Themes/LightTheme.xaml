<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- AditiKraft Brand Colors - Light Theme -->
    
    <!-- Backgrounds - Light versions -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#f5f7fa"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="#e8ecf0"/>
    <SolidColorBrush x:Key="SurfacePressedBrush" Color="#d8dfe6"/>
    
    <!-- Border -->
    <SolidColorBrush x:Key="BorderBrush" Color="#d0d7de"/>
    
    <!-- Text - Dark for light backgrounds -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#0a0e12"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5c6875"/>
    
    <!-- Accent - AditiKraft Primary Green (same across themes) -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0CAC5C"/>
    
    <!-- Monitor Icons -->
    <SolidColorBrush x:Key="MonitorIconBackgroundBrush" Color="#e0e5eb"/>
</ResourceDictionary>
