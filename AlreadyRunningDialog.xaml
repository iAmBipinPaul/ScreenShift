<Window x:Class="MonitorSwitcher.AlreadyRunningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monitor Switcher"
        Width="450" Height="340"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Border Background="#0a0e12" 
            CornerRadius="12" 
            BorderBrush="#2a3344" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>
        
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Image Source="Assets/app.png" 
                       Width="32" Height="32" 
                       Margin="0,0,12,0"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Monitor Switcher" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Status: Running" 
                               Foreground="#0CAC5C" 
                               FontSize="12" 
                               FontWeight="Medium"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Content -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="The application is already running in the background." 
                           Foreground="#b8c1cc" 
                           FontSize="14"
                           Margin="0,0,0,16"/>
                
                <!-- Visual Aid Box -->
                <Border Background="#1e2433" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Simulated Taskbar Icon -->
                        <Border Width="40" Height="40" Background="#101010" CornerRadius="6" Margin="0,0,12,0" BorderBrush="#333" BorderThickness="1">
                            <Canvas Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Bezel (White Outline) -->
                                <Rectangle Width="26" Height="17" Canvas.Left="3" Canvas.Top="4" Stroke="White" StrokeThickness="2"/>
                                <!-- Screen (Green Fill) -->
                                <Rectangle Width="22" Height="13" Canvas.Left="5" Canvas.Top="6" Fill="#0CAC5C"/>
                                <!-- Stand (White) -->
                                <Rectangle Width="4" Height="3" Canvas.Left="14" Canvas.Top="22" Fill="White"/>
                                <Rectangle Width="14" Height="2" Canvas.Left="9" Canvas.Top="25" Fill="White"/>
                            </Canvas>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Look for this icon" FontWeight="SemiBold" Foreground="White" FontSize="13" Margin="0,0,0,4"/>
                            <TextBlock Text="• Near the clock on primary monitor" Foreground="#8b949e" FontSize="12"/>
                            <TextBlock Text="• May be inside hidden icons (^)" Foreground="#8b949e" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Button -->
            <Button Grid.Row="2" 
                    Content="Got it" 
                    Click="OkButton_Click"
                    HorizontalAlignment="Right"
                    Padding="24,8"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Margin="0,20,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2a3344"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a4455"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
