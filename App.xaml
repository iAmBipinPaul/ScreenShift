<Application x:Class="MonitorSwitcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#1F1F1F"/>
            <SolidColorBrush x:Key="CardBrush" Color="#2D2D2D"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="HoverBrush" Color="#3D3D3D"/>
            <SolidColorBrush x:Key="PrimaryBrush" Color="#60CDFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
